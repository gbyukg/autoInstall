#!/bin/bash
db2 connect to ${1}

db2 "CREATE BUFFERPOOL BP${1} IMMEDIATE  SIZE 1000 AUTOMATIC PAGESIZE 32 K"
db2 "CREATE  LARGE  TABLESPACE TS${1} PAGESIZE 32 K  MANAGED BY AUTOMATIC STORAGE EXTENTSIZE 32 OVERHEAD 10.5 PREFETCHSIZE 32 TRANSFERRATE 0.14 BUFFERPOOL BP${1}"

db2 "CREATE USER TEMPORARY TABLESPACE "${1}GTTTS" IN DATABASE PARTITION GROUP "IBMDEFAULTGROUP" PAGESIZE 32K MANAGED BY AUTOMATIC STORAGE EXTENTSIZE 32 PREFETCHSIZE 32 BUFFERPOOL "BP${1}" OVERHEAD
 7.5 TRANSFERRATE 0.06 NO FILE SYSTEM CACHING"
db2 "CREATE BUFFERPOOL SUGARBPSMALL IMMEDIATE  SIZE 1000 AUTOMATIC PAGESIZE 4 K"
db2 "CREATE  LARGE  TABLESPACE SUGARTSSMALL PAGESIZE 4 K  MANAGED BY AUTOMATIC STORAGE EXTENTSIZE 32 OVERHEAD 10.5 PREFETCHSIZE 32 TRANSFERRATE 0.14 BUFFERPOOL SUGARBPSMALL"
db2 "CREATE GLOBAL TEMPORARY TABLE CGTT_SEED_ID ( SEED CHARACTER(40), ID CHARACTER(40)) ON COMMIT DELETE ROWS NOT LOGGED ON ROLLBACK DELETE ROWS"